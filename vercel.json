{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/bun",
      "config": { "includeFiles": ["frontend/dist/**"] }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server/index.ts"
    }
  ],
  "installCommand": "curl -fsSL https://bun.sh/install | bash && ~/.bun/bin/bun install --frozen-lockfile"
}
